<configs>
	<!-- Ammo changes -->
	<append xpath="//item_display">		
		<item_display_info display_type="foodEft1" display_group="groupConsumables">
			<display_entry name="$foodAmountAdd" title_key="statFoodAmount"/>
			<display_entry name="$waterAmountAdd" title_key="statWaterAmount"/>
			<display_entry name="foodHealthAmount" title_key="statHealthAmount"/>
			<display_entry name=".foodStaminaBonusAdd" title_key="statFoodStaminaBonus"/>
		</item_display_info>
		<item_display_info display_type="waterEft1" display_group="groupConsumables">
			<display_entry name="$waterAmountAdd" title_key="statWaterAmount"/>
			<display_entry name="$foodAmountAdd" title_key="statFoodAmount"/>
			<display_entry name="foodHealthAmount" title_key="statHealthAmount"/>
			<display_entry name="dStaminaRegen" title_key="statStaminaRegen" display_type="Percent"/>
		</item_display_info>
		
		<item_display_info display_type="drinkRatCola" display_group="groupConsumables">
			<display_entry name="dRunSpeed" title_key="Run Speed" display_type="Percent" display_leading_plus="true"/>
			<display_entry name="$waterAmountAdd" title_key="statWaterAmount"/>
			<display_entry name="$foodAmountAdd" title_key="statFoodAmount"/>
			<display_entry name="foodHealthAmount" title_key="statHealthAmount"/>
			<display_entry name="dStaminaRegen" title_key="statStaminaRegen" display_type="Percent"/>
			<display_entry name="dDuration" title_key="Duration" display_type="Time"/>
		</item_display_info>
		<item_display_info display_type="liquorPevkoBeer" display_group="groupAlcoholics">
			<display_entry name="dMeleeDamage" title_key="Melee Damage" display_type="Percent" display_leading_plus="true"/>
			<display_entry name="dAttackSpeed" title_key="Attack Speed" display_type="Percent" display_leading_plus="true"/>
			<display_entry name="dStaminaRegen" title_key="Stamina Regeneration" display_type="Percent" display_leading_plus="true"/>
			<display_entry name="dDamageResist" title_key="Damage Resistance" display_type="Percent" display_leading_plus="true"/>
			<display_entry name="dDuration" title_key="Duration" display_type="Time"/>
		</item_display_info>
		<item_display_info display_type="liquorVodka" display_group="groupAlcoholics">
			<display_entry name="dRangedDamage" title_key="Ranged Damage" display_type="Percent" display_leading_plus="true"/>
			<display_entry name="dDamageResist" title_key="Damage Resistance" display_type="Percent" display_leading_plus="true"/>
			<display_entry name="dBuffResistance" title_key="Buff Restistance" display_type="Percent" display_leading_plus="true"/>
			<display_entry name="dDuration" title_key="Duration" display_type="Time"/>
		</item_display_info>
		<item_display_info display_type="liquorMoonshine" display_group="groupAlcoholics">
			<display_entry name="dDuration" title_key="Duration" display_type="Time"/>
		</item_display_info>		
	</append>	
</configs>