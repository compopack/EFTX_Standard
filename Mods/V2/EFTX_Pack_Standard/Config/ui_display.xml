<configs>
	<!-- Ammo changes -->
	<append xpath="//item_display">		
		<item_display_info display_type="eftFirearmDisplay" display_group="groupRanged">
			<display_entry name="EntityDamage" display_type="Decimal1" title_key="statEntityDamageRanged" tags="perkGunslinger,revolver,perkBoomstick,perkDeadEye,perkMachineGunner,perkBookAutoWeapons,perkTurrets,perkArchery,admin"/>
			<display_entry name="MagazineSize" title_key="statMagazineSize" tags="perkGunslinger,perkBoomstick,perkDeadEye,perkMachineGunner,perkBookAutoWeapons,perkTurrets,perkArchery,admin"/>
			<display_entry name="RoundsPerMinute" title_key="statRoundsPerMinute" tags="perkGunslinger,perkBoomstick,perkDeadEye,perkMachineGunner,perkBookAutoWeapons,perkTurrets,perkArchery,admin"/>
			<display_entry name="DegradationMax" title_key="statDegradationMax" tags="perkGunslinger,perkBoomstick,perkDeadEye,perkMachineGunner,perkBookAutoWeapons,perkTurrets,perkArchery,admin"/>
		</item_display_info>
		<item_display_info display_type="meleeRepair" display_group="groupMelee">
			<display_entry name="EntityDamage" display_type="Decimal1" title_key="statEntityDamageMelee" tags="perkMiner69r,perkSalvageOperations,perkElectrocutioner,perkJavelinMaster,perkPummelPete,perkSkullCrusher,perkDeepCuts,perkBrawler,admin"/>
			<display_entry name="dBlockRepairAmount" title_key="statBlockRepairAmount"/>
			<display_entry name="BlockDamage" display_type="Decimal1" title_key="statBlockDamage" tags="perkMiner69r,perkSalvageOperations,perkElectrocutioner,perkJavelinMaster,perkPummelPete,perkSkullCrusher,perkDeepCuts,perkBrawler,admin"/>
			<display_entry name="StaminaLoss" display_type="Decimal1" title_key="statStaminaLoss" negative_preferred="true"/>
			<display_entry name="AttacksPerMinute" title_key="statAttacksPerMinute" tags="perkFlurryOfBlows,perkMiner69r,perkSalvageOperations,perkElectrocutioner,perkJavelinMaster,perkPummelPete,perkSkullCrusher,perkDeepCuts,perkBrawler,admin"/>
			<display_entry name="DegradationMax" title_key="statDegradationMax" tags="perkMiner69r,perkSalvageOperations,perkElectrocutioner,perkJavelinMaster,perkPummelPete,perkSkullCrusher,perkDeepCuts,perkBrawler,admin"/>
		</item_display_info>			
	</append>
	
	<insertAfter xpath="//item_display_info[@display_type='rangedGun']/display_entry[@name='DegradationMax']">
			<display_entry name="DamageModifier" title_key="Accuracy (Hip)" display_type="Decimal2" negative_preferred="true" tags="hipfireAccuracyDisplay,admin"/>
			<display_entry name="DamageModifier" title_key="Accuracy (Aimed)" display_type="Decimal2" negative_preferred="true" tags="aimedAccuracyDisplay,admin"/>
			<display_entry name="DamageModifier" title_key="Max Recoil (Vertical)" display_type="Decimal2" negative_preferred="true" tags="recoilDisplay,admin"/>
	</insertAfter>
	
	<insertAfter xpath="//item_display_info[@display_type='rangedGunNoMag']/display_entry[@name='DegradationMax']">
			<!--display_entry name="DamageModifier" title_key="Accuracy (Hip)" display_type="Decimal2" negative_preferred="true" tags="hipAccuracyDisplay,admin"/-->
			<display_entry name="SpreadDegreesVertical" title_key="Accuracy (Hip)" display_type="Decimal2" negative_preferred="true" tags="perkGunslinger,perkBoomstick,perkDeadEye,perkMachineGunner,perkBookAutoWeapons,perkTurrets,perkArchery,admin"/>
			<display_entry name="DamageModifier" title_key="Accuracy (Aimed)" display_type="Decimal2" negative_preferred="true" tags="aimedAccuracyDisplay,admin"/>
	</insertAfter>
	
	<insertAfter xpath="//item_display_info[@display_type='rangedShotgun']/display_entry[@name='DegradationMax']">
			<!--display_entry name="DamageModifier" title_key="Accuracy (Hip)" display_type="Decimal2" negative_preferred="true" tags="hipAccuracyDisplay,admin"/-->
			<display_entry name="SpreadDegreesVertical" title_key="Accuracy (Hip)" display_type="Decimal2" negative_preferred="true" tags="perkGunslinger,perkBoomstick,perkDeadEye,perkMachineGunner,perkBookAutoWeapons,perkTurrets,perkArchery,admin"/>
	</insertAfter>
	
	<insertAfter xpath="//item_display_info[@display_type='rangedShotgunNoMag']/display_entry[@name='DegradationMax']">
			<!--display_entry name="DamageModifier" title_key="Accuracy (Hip)" display_type="Decimal2" negative_preferred="true" tags="hipAccuracyDisplay,admin"/-->
			<display_entry name="SpreadDegreesVertical" title_key="Accuracy (Hip)" display_type="Decimal2" negative_preferred="true" tags="perkGunslinger,perkBoomstick,perkDeadEye,perkMachineGunner,perkBookAutoWeapons,perkTurrets,perkArchery,admin"/>
	</insertAfter>
	
	
	
</configs>